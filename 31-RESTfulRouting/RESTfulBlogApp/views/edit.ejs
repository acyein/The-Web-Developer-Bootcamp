<%- include("partials/header.ejs") %>

<div class="ui main text container">
    <div class="ui huge header">Edit: <%= blog.title %></div>
    <form class="ui form padded segment" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input id="title" type="text" name="blog[title]" value="<%= blog.title %>">
        </div>

        <div class="field">
            <label for="image">Image</label>
            <input id="image" type="text" name="blog[image]" value="<%= blog.image %>">
        </div>

        <div class="field">
            <label for="body">Blog Content</label>
            <textarea id="body" name="blog[body]" id="" cols="30" rows="10"><%= blog.body %></textarea>
        </div>

        <input class="ui olive button" type="submit">
        <a class="ui button" href="/blogs/<%= blog._id %>">Cancel</a>
    </form>
</div>

<%- include("partials/footer.ejs") %>