<%- include("partials/header.ejs") %>
<div class="ui main text container">
    <div class="ui huge header">D E L I S H</div>
    <div class="ui top raised padded segment">
        <div class="ui divided items">
            <% blogs.forEach(blog => { %>
                <div class="bottom aligned item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="blog image">
                    </div>
                    
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>

                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>

                        <div class="description">
                            <p><%- blog.body.substring(0, 400) %></p>
                        </div>

                        <div class="extra">
                            <a class="ui olive button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>   
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>